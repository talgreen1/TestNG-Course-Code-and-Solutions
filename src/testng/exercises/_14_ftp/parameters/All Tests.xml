<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="FTP Client Tests" verbose="2">

	<test name="Init Suite">
		<classes>
			<class name="testng.exercises._14_ftp.parameters.TestManager" />
		</classes>
	</test>

	<test name="Login Tests">
		<parameter name="username" value="admin" />
		<parameter name="password" value="admin" />
		<parameter name="invalidUsername" value="admin1" />
		<parameter name="invalidPassword" value="admin2" />

		<classes>
			<class name="testng.exercises._14_ftp.parameters.login.LoginTests" />
		</classes>
	</test>

	<test name="File Tests">
		<parameter name="fileName" value="c:/temp/file1.txt" />
		<parameter name="fileContent" value="Hello file 1" />

		<classes>
			<class name="testng.exercises._14_ftp.parameters.files.FilesTests" />
		</classes>
	</test>
</suite>
